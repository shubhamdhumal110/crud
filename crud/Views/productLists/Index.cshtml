@model IPagedList<crud.productList>

@{
    ViewBag.Title = "Index";
}
@using PagedList.Mvc;
@using PagedList;
<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table  table-striped">
    <tr class="bg-dark text-light">
        <th>
            @Html.DisplayNameFor(model => model.First().ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().CategeoryName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategeoryName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                <i class="fa fa-edit text-success"></i> |
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                <i class="fa fa-book"></i> |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                <i class="fa fa-trash text-danger"></i>
            </td>
        </tr>
    }

</table>

@Html.PagedListPager(Model, i => Url.Action("Index", "productLists", new { i, search = Request.QueryString["search"] }))
